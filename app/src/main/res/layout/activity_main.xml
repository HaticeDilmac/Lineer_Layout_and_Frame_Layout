<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/baslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="Example App"
        android:textSize="25dp"></TextView>

    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
         android:orientation="horizontal"
         >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="Name and Surname:"
             ></TextView>

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="50"></EditText>
     </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="This is a note"
            ></TextView>

         <Button
             android:layout_margin="10dp"
             android:text="Hi I'am a Button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         </Button>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ort"
            android:scaleType="centerCrop"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ortaköy Cami"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp" ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İstanbul"
            android:textStyle="bold"
            android:textSize="20dp" ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17.03"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="70dp" ></TextView>
    </FrameLayout>
</LinearLayout>